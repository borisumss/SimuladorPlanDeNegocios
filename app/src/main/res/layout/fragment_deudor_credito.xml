<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controlador.DeudorCredito">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/datosDeudorLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="#358BCD"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="DATOS DEL DEUDOR"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/nombreDedurolabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/datosDeudorLabel"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="26dp"
                    android:text="Nombres"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/nombreSimuInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="42dp"
                    android:layout_marginEnd="42dp"
                    android:ems="10"
                    android:inputType="textPersonName" />


                <TextView
                    android:id="@+id/apellidoDedurolabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nombreSimuInput"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="23dp"
                    android:text="Apellidos"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/apellidoDeudorInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="42dp"
                    android:layout_marginEnd="42dp"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/civilDeudorLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/apellidoDeudorInput"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="23dp"
                    android:text="Estado Civil"
                    android:textColor="#000000" />

                <Spinner
                    android:id="@+id/civilDeudorInput"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/civilDeudorLabel"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="42dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="42dp" />

                <TextView
                    android:id="@+id/CIDeudorLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="23dp"
                    android:text="C.I."
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/ciDeudorInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/CIDeudorLabel"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="42dp"
                    android:layout_marginEnd="220dp"
                    android:ems="10"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/extDeudorLabel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="234dp"
                    android:layout_marginTop="-66dp"
                    android:text="ExtensiÃ³n"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/extDeudorInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/extDeudorLabel2"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="232dp"
                    android:layout_marginEnd="42dp"
                    android:ems="10"
                    android:inputType="text" />


                <TextView
                    android:id="@+id/telfDeudorLabel3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="23dp"
                    android:text="Telefono"
                    android:textColor="#000000" />


                <EditText
                    android:id="@+id/tefDeudorInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/telfDeudorLabel3"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="42dp"
                    android:layout_marginEnd="220dp"
                    android:ems="10"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/edadDeudorLabel4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="234dp"
                    android:layout_marginTop="-66dp"
                    android:text="Edad"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/edadDeudorInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edadDeudorLabel4"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="232dp"
                    android:layout_marginEnd="42dp"
                    android:ems="10"
                    android:inputType="number" />


                <TextView
                    android:id="@+id/datosCreditoLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="50dp"
                    android:background="#358BCD"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="DATOS DEL CREDITO"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/actividadLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/datosCreditoLabel"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="26dp"
                    android:text="Actividad"
                    android:textColor="#000000" />

                <Spinner
                    android:id="@+id/actividadInput"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/actividadLabel"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="42dp"
                    android:layout_marginEnd="42dp"
                    android:textAlignment="textStart" />

                <TextView
                    android:id="@+id/montolabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/actividadInput"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="26dp"
                    android:text="Monto Solicitado (Bs.)"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/montoInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/montolabel"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="42dp"
                    android:layout_marginEnd="42dp"
                    android:ems="10"
                    android:inputType="numberDecimal" />


                <TextView
                    android:id="@+id/formaPagoLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/montoInput"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="26dp"
                    android:text="Forma de Pago"
                    android:textColor="#000000" />

                <Spinner
                    android:id="@+id/formaPagoInput"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/formaPagoLabel"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="42dp"
                    android:layout_marginEnd="42dp"
                    android:ems="10"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/plazoLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="42dp"
                    android:layout_marginTop="26dp"
                    android:text="Plazo (meses)"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/plazoInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/plazoLabel"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="42dp"
                    android:layout_marginEnd="150dp"
                    android:ems="10"
                    android:inputType="number" />

                <Button
                    android:id="@+id/buttonCalc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="26dp"
                    android:layout_marginEnd="100dp"
                    android:onClick="change"
                    android:text="Calcular cuota" />

                <TextView
                    android:id="@+id/cuotaLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="42dp"
                    android:layout_marginTop="26dp"
                    android:text="Cuota"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/cuotaInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cuotaLabel"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="42dp"
                    android:textColor="#3F51B5"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/interesLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="42dp"
                    android:layout_marginTop="26dp"
                    android:text="Tasa de interes (%)"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/interesInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/interesLabel"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="42dp"
                    android:textColor="#3F51B5"
                    android:textSize="18sp" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</FrameLayout>