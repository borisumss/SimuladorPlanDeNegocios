<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Modelo.Simulacion"
    android:background="#52FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="203dp"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="80dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.496"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.045"
                    app:srcCompat="@drawable/img" />

                <TextView
                    android:id="@+id/viabilidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/datosPlanLabel"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="26dp"
                    android:text="La viabilidad del proyecto es de "
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/viabilidadInput"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="42dp"
                    android:layout_marginEnd="42dp"
                    android:ems="10"
                    android:inputType="text"
                    android:textSize="30dp"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/atractivo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/datosPlanLabel"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="26dp"
                    android:text="¿El proyecto es atractivo? "
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/atractivoInput"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="42dp"
                    android:layout_marginEnd="42dp"
                    android:ems="10"
                    android:inputType="text"
                    android:textSize="30dp"
                    android:textAlignment="center"/>

                <Button
                    android:id="@+id/informe"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/custom_butons"
                    android:drawableEnd="@drawable/ic_down_white"
                    android:text="Informe del plan de negocio"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/Resultado"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/custom_butons"
                    android:drawableEnd="@drawable/ic_down_white"
                    android:text="Resultados de la simulación"
                    app:backgroundTint="@null" />

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</FrameLayout>